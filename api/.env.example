# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/medicine-dispenser
# Para MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/medicine-dispenser

# JWT Secret (cambiar por una clave segura en producción)
JWT_SECRET=tu_clave_secreta_muy_segura_cambiar_en_produccion

# Configuración de autenticación
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=7

# Límite de tamaño de imágenes (en MB)
MAX_IMAGE_SIZE=5

# API Keys para servicios externos (opcional)
# Google Cloud Vision API (para OCR avanzado)
GOOGLE_CLOUD_VISION_KEY=

# Configuración de seguridad
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=debug

# Configuración de cédulas colombianas
CEDULA_MIN_LENGTH=6
CEDULA_MAX_LENGTH=10

# Configuración de dispensación
MAX_DAILY_DOSES=3
DISPENSE_COOLDOWN_MINUTES=30
